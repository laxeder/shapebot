{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "baseUrl": ".",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "paths": {
      "@controllers/*": ["./src/controllers/*"],
      "@commands/*": ["./src/commands/*"],
      "@configs/*": ["./src/configs/*"],
      "@modules/*": ["./src/modules/*"],
      "@events/*": ["./src/events/*"],
      "@shared/*": ["./src/shared/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src"]
}
